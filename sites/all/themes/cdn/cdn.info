name = mobolify
description = A Bootstrap Sub-theme.
core = 7.x
base theme = bootstrap


;;;;;;;;;;;;;;;;;;;;;
;; Regions
;;;;;;;;;;;;;;;;;;;;;

regions[navigation]     = 'Navigation'
regions[header]         = 'Top Bar'
regions[header2]         = 'Top Bar2'
regions[header3]         = 'Top Bar3'
regions[highlighted]    = 'Highlighted'
regions[help]           = 'Help'
regions[Content_top]        = 'Content_top'
regions[content]        = 'Content'
regions[sidebar_first]  = 'Primary'
regions[sidebar_second] = 'Secondary'
regions[footer]         = 'Footer'
regions[footer_firstcolumn]         = 'footer_firstcolumn'
regions[footer_secondcolumn]         = 'footer_secondcolumn'
regions[footer_thirdcolumn]         = 'footer_thirdcolumn'
regions[footer_fourthcolumn]         = 'footer_fourthcolumn'
regions[footer_fifthcolumn]         = 'footer_fifthcolumn'
regions[page_top]       = 'Page top'
regions[page_bottom]    = 'Page bottom'  = 'Page bottom'


;;;;;;;;;;;;;;;;;;;;;
;; Stylesheets
;;;;;;;;;;;;;;;;;;;;;

stylesheets[all][] = css/style.css
stylesheets[all][] = assets/css/elements.css
stylesheets[all][] = css/custom.css
stylesheets[all][] = assets/css/bootstrap.min.css
stylesheets[all][] = assets/css/awesome/css/font-awesome.min.css


